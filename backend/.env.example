# Multimodal RAG Backend - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google Gemini API Configuration (REQUIRED)
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
# or: https://ai.google.dev/
GOOGLE_API_KEY=your_google_gemini_api_key_here

# =============================================================================
# Gemini Model Configuration
# =============================================================================
# Model IDs for different tasks (optional - defaults shown)
CHAT_MODEL_ID=gemini-2.0-flash
TEXT_SUMMARIZER_MODEL_ID=gemini-2.0-flash
IMAGE_SUMMARIZER_MODEL_ID=gemini-2.0-flash

# =============================================================================
# Ollama Configuration (for embeddings)
# =============================================================================
# Ollama server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Embedding model ID (Ollama model name)
EMBEDDING_MODEL_ID=embeddinggemma:latest

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database URL (default: sqlite:///./data/app.db)
# For PostgreSQL, use: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./data/app.db

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Optional: Hugging Face (for alternative models)
# =============================================================================
# HUGGINGFACEHUB_API_TOKEN=your_hf_token_here

# =============================================================================
# Optional: OpenRouter (alternative LLM provider)
# =============================================================================
# OPENROUTER_API_KEY=your_openrouter_key_here
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1


# Optional Headers
SITE_URL = http://localhost:8000
SITE_NAME = Multimodal AI Helper